MDFloatLayout:

	MDRaisedButton:
		text: "Выбрать время"
		pos_hint: {'center_x': .5, 'center_y': .8}
        size_hint: .5, .2
		on_release: app.show_time_picker()
	MDLabel:
		id: time_label
		text: "Выберите время!"
		pos_hint: {'center_x': .75, 'center_y': .65}

	MDRaisedButton:
		text: "Выбрать дату"
		pos_hint: {'center_x': .5, 'center_y': .3}
        size_hint: .5, .2
		on_release: app.show_date_picker()
	MDLabel:
		id: date_label
		text: "Выберите дату!"
		pos_hint: {'center_x': .75, 'center_y': .15}